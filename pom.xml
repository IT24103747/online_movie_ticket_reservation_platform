<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Movie Ticket Booking System</display-name>

  <servlet>
    <servlet-name>ReserveTicketServlet</servlet-name>
    <servlet-class>servlet.ReserveTicketServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReserveTicketServlet</servlet-name>
    <url-pattern>/ReserveTicketServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminViewReservationsServlet</servlet-name>
    <servlet-class>servlet.AdminViewReservationsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminViewReservationsServlet</servlet-name>
    <url-pattern>/AdminViewReservationsServlet</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>reserveTicket.jsp</welcome-file>
  </welcome-file-list>
</web-app>
